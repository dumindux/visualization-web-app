doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=Edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
    title #{title}
    style
      |html,body { height: 100%; margin: 0px; padding: 0px; }
      |#map {
      |  height: 100%;
      |}
      |#floating-panel {
      |  margin-top: 70px;
      |  margin-left: 10px;
      |  position: absolute;
      |  top: 10px;
      |  z-index: 5;
      |  background-color: #fff;
      |  border-radius: 5px;
      |  padding: 10px;
      |  text-align: center;
      |  font-family: 'Roboto','sans-serif';
      |  line-height: 30px;
      |}
      |.buttons {
      |  float: left;
      |  margin-top: 10px;
      |}
    script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=visualization")
  body
    div(id="floating-panel")
      div
        button(onclick="toggleHeatmap()", class="buttons") Toggle Heatmap
      div
        button(onclick="changeGradient()", class="buttons") Change gradient
    div(id="map")
    script(type="text/javascript").
      jsondata='!{data}';
    script(src="../javascripts/contributions/renderer.js")
